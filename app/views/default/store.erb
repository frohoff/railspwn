<% content_for :title, "Video Store" %>
<p>Credits: <%= session[:credits] %></p>
<% if flash[:purchased] %>
	<h4>Your Purchase:</h4>
	<iframe width="420" height="315" src="http://www.youtube.com/embed/dQw4w9WgXcQ" frameborder="0" allowfullscreen></iframe>
<% end %>	
	<p>
	<%= form_tag() do %>
		<%= label_tag(:cc, 'CC#:') %>
		<%= text_field_tag(:cc) %>
		<%= label_tag(:credits, 'Credits:') %>
		<%= text_field_tag(:credits) %>
		<%= submit_tag 'Refill Credits' %>
	<% end %>
	</p>
	<p>
	<%= form_tag() do %>
		<%= hidden_field_tag(:buy, 'true') %>
		<%= submit_tag 'Buy a Video (10 Credits)' %>
	<% end %>
	</p>
